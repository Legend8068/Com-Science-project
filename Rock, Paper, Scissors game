                userchoice =input("*Do you want to play again*")
                if userchoice in ["Yes", "yes", "YES", "YEs"]:
                    break
                else:
                    print("~GAME OVER~\n")
                    print("Your points:",p_points)
                    print("Computer points:",c_points)
                    if p_points > c_points:
                        print(name,"WINS!")
                    elif p_points == c_points:
                        print("IT'S A TIE!")
                    else:
                        print("COMPUTER WINS!") 
                    exit()
    elif player == "Scissors":
        if computer == "Rock":
            print("Computer chose Rock.You lost, better luck next time")
            c_points += 1
            while True:
                userchoice =input("*Do you want to play again*")
                if userchoice in ["Yes", "yes", "YES", "YEs"]:
                    break
                else:
                    print("~GAME OVER~\n")
                    print("Your points:",p_points)
                    print("Computer points:",c_points)
                    if p_points > c_points:
                        print(name,"WINS!")
                    elif p_points == c_points:
                        print("IT'S A TIE!")
                    else:
                        print("COMPUTER WINS!") 
                    exit()
        else:
            print("Computer chose Paper, you win!!")
            p_points += 1
            while True:
                userchoice =input("*Do you want to play again*")
                if userchoice in ["Yes", "yes", "YES", "YEs"]:
                    break
                else:
                    print("~GAME OVER~\n")
                    print("Your points:",p_points)
                    print("Computer points:",c_points)
                    if p_points > c_points:
                         print(name,"WINS!")
                    elif p_points == c_points:
                        print("IT'S A TIE!")
                    else:
                         print("COMPUTER WINS!") 
                    exit()
    else:
        print("Please check your spelling")
    #This is written again so that the code repeats
    player = False
    computer = options[randint(0,2)]
